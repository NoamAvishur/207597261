extends layout
block content
    script(src='js/Results.js', defer) 
    div.content
        div.results
            h1 תוצאות החיפוש
            br
            form(class="my-form", action="/findProduct", method="get", id="block")
                input(type="submit" class="btn" value="חפש" name="" id="searchBtn")
                div.form
                    input(type="search" name="search" id="resultLine" placeholder=v7)
            table#classes
                tr 
                    th כתובת
                    th אימייל
                    th מחיר
                    th תיאור
                    th קטגוריה
                    th סוג
                    th שם 
                    th תמונה
                each n in v6  
                    tr 
                        td=n.address
                        td=n.email
                        td=n.price
                        td=n.description
                        td=n.category
                        td=n.productType
                        td=n.productName
                        td
                            img#logo(src=n.image) 